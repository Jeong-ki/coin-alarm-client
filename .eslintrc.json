{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jest": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off",
    "no-useless-escape": 0,
    "prettier/prettier": [
      "error", 
      {
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ]
  }
}
